<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="API Automation Suite" parallel="tests" thread-count="3">
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <test name="User API Tests">
        <classes>
            <class name="com.api.tests.UserApiTests"/>
        </classes>
    </test>

    <test name="Product API Tests">
        <classes>
            <class name="com.api.tests.ProductApiTests"/>
        </classes>
    </test>

    <test name="Order API Tests">
        <classes>
            <class name="com.api.tests.OrderApiTests"/>
        </classes>
    </test>
</suite> 